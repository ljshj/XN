        <item name="android:progressDrawable">@drawable/room_rating_bar</item>
        <item name="android:minHeight">18.0dip</item>
    </style>

    <style name="tabView_no_underline" parent="@android:style/Widget.Holo.Light.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_holo_bandgood</item>
    </style>

    <style name="Theme.Holo.Light.NoActionBar.Tab" parent="@android:style/Theme.Holo.Light.NoActionBar">
