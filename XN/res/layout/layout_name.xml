<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_page_bg"
    android:orientation="vertical" >
    
<include layout="@layout/title_bar"/>
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/img_user_center_bg"
        android:orientation="horizontal" >

        <com.bgood.xn.widget.CEditText
            android:id="@+id/name_et_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"
            android:singleLine="true"
            android:background="@null"
            android:drawableRight="@drawable/img_clear_edit"
            android:gravity="center_vertical"
            android:hint="请输入您的昵称"
            android:lines="1" >

            <requestFocus />
        </com.bgood.xn.widget.CEditText>
    </LinearLayout>
</LinearLayout>
