<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
android:background="@drawable/item_press_grey_selector"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/message_friend_list_margin_left_right"
    android:paddingRight="@dimen/message_friend_list_margin_left_right" >

    <ImageView
        android:id="@+id/friend_list_child_item_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:background="@drawable/icon_default" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/friend_list_child_item_icon" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginRight="3dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/friend_list_child_item_name"
                style="@style/tv_singline_ellipsize_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="刘诗诗"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/friend_list_child_item_sex"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/img_common_sex_male" />
        </LinearLayout>

        <TextView
            android:id="@+id/friend_list_child_item_summary"
            style="@style/tv_singline_ellipsize_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="她很懒,一个字都没有留下"
            android:textSize="15dp" />
    </RelativeLayout>

</RelativeLayout>