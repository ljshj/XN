<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center" >

    <LinearLayout
        android:id="@+id/chat_ll_voice_rcd_hint_rcding"
        android:layout_width="wrap_content"
        android:layout_height="140.0dip"
        android:gravity="bottom|center"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="@drawable/img_chat_voice_rcd_hint_bg"
            android:gravity="bottom|center"
            android:minWidth="140.0dip"
            android:orientation="horizontal"
            android:paddingLeft="25.0dip" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15.0dip"
                android:layout_marginRight="4.0dip"
                android:src="@drawable/img_chat_voice_rcd_hint" />

            <ImageView
                android:id="@+id/chat_iv_voice_volume"
                android:layout_width="43sp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="10dip"
                android:layout_marginTop="10dip"
                android:src="@drawable/img_chat_voice_amp1" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/chat_ll_cancel_voice"
            android:layout_width="140.0dip"
            android:layout_height="140.0dip"
            android:layout_marginLeft="10.0dip"
            android:background="@drawable/img_chat_voice_rcd_cancel_bg_focused"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="取消"
                android:textColor="#ffffff"
                android:textSize="25dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/chat_ll_voice_rcd_hint_loading"
        android:layout_width="140.0dip"
        android:layout_height="140.0dip"
        android:background="@drawable/img_chat_voice_rcd_hint_bg"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone" >

        <ProgressBar
            android:id="@+id/progressBar1"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/chat_voice_ll_rcd_hint_tooshort"
        android:layout_width="140.0dip"
        android:layout_height="140.0dip"
        android:background="@drawable/img_chat_voice_rcd_hint_bg"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_chat_voice_to_short" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15.0dip"
            android:text="时间太短"
            android:textColor="#ffffff" />
    </LinearLayout>

</LinearLayout>