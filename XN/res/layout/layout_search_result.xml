<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_page_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/search_result_rl_title"
        style="@style/common_top_title_style" >

        <Button
            android:id="@+id/search_result_btn_back"
            style="@style/common_btn_back_style" />

        <TextView
            android:id="@+id/search_result_tv_title"
            style="@style/common_tv_title_style"
            android:text="搜索结果" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="70dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/img_search_bg"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:id="@+id/ll_home_search_check_type"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/home_tv_check_search_indecator"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:text="我想"
                            android:textColor="@color/text_color_normal"
                            android:textSize="15dp" />

                        <View
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/img_home_seach_check_type_hint" />

                        <View
                            android:layout_width="1px"
                            android:layout_height="match_parent"
                            android:background="@drawable/img_search_y_line" />
                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/search_result_rl_search_layout"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:orientation="horizontal" >

                        <EditText
                            android:id="@+id/search_result_et_content"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:gravity="center_vertical"
                            android:singleLine="true" />
                    </RelativeLayout>
                </LinearLayout>

                <Button
                    android:id="@+id/search_result_btn_search"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/img_search_bg"
                    android:gravity="center"
                    android:textSize="16dp"
                    android:enabled="false"
                    android:focusable="false"
                    android:text="搜索" />
            </RelativeLayout>
        </LinearLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="25dp"
            android:background="@color/search_result_yellow"
            android:ellipsize="end"
            android:gravity="center"
            android:lines="1"
            android:text="系统已根据您的关键字找到以下结果并自动匹配加入相关交流大厅"
            android:textColor="#2f2f2f"
            android:textSize="10dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@drawable/img_search_x_line" />

        <LinearLayout
            android:id="@+id/search_result_ll_exchange_hall"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone" >

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_gravity="bottom"
                android:background="@drawable/img_search_x_line" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/search_result_tv_member"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="会员"
                        android:textColor="@color/search_result_select_bule"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/search_result_tv_application"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="相关应用"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/search_result_tv_weiqiang"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="微墙"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/search_result_tv_shopwindow"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="橱窗"
                        android:textSize="16dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:orientation="horizontal" >

                <View
                    android:id="@+id/search_result_view_member"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/img_home_type_select" />

                <View
                    android:id="@+id/search_result_view_application"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/img_home_type_select"
                    android:visibility="invisible" />

                <View
                    android:id="@+id/search_result_view_weiqiang"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/img_home_type_select"
                    android:visibility="invisible" />

                <View
                    android:id="@+id/search_result_view_shopwindow"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/img_home_type_select"
                    android:visibility="invisible" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@drawable/img_underline_vpi" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <com.zhuozhong.widget.CustomViewPager
                android:id="@+id/search_result_vp_table"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>