<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_page_bg"
    android:orientation="vertical" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="25dp"
            android:background="@color/search_result_yellow"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:text="系统已根据您的关键字找到以下结果并自动匹配加入相关交流大厅"
            android:textColor="#2f2f2f"
            android:textSize="10sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@drawable/img_search_x_line" />

  	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="50dp"
	    android:orientation="vertical"
	     >
	    <RadioGroup
	        android:id="@+id/radio_group"
	        android:layout_width="match_parent"
	        android:layout_height="50dp"
	        android:orientation="horizontal" >

	        <RadioButton
	            android:id="@+id/radio_01"
	            android:textColor="@color/black"
	            android:layout_width="0dp"
	            android:layout_weight="1"
	            android:layout_height="wrap_content"
	            android:button="@null"
	            android:gravity="center"
	            android:text="会员" />

	        <RadioButton
	            android:id="@+id/radio_02"
	            android:textColor="@color/black"
	            android:layout_width="0dp"
	            android:layout_weight="1"
	            android:layout_height="wrap_content"
	            android:button="@null"
	            android:gravity="center"
	            android:text="微墙" />

	        <RadioButton
	            android:id="@+id/radio_03"
	            android:layout_width="0dp"
	            android:layout_weight="1"
	            android:layout_height="wrap_content"
	            android:button="@null"
	            android:gravity="center"
	            android:text="橱窗" />
	      
	    </RadioGroup>
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:layout_alignParentBottom="true"
	        android:layout_marginBottom="10dp">
		    <ImageView 
		        android:id="@+id/img_01"
		        android:layout_width="0dp"
		        android:layout_weight="1"
		        android:layout_height="wrap_content"
		        android:scaleType="fitXY"
		        android:paddingLeft="15dp"
		        android:paddingRight="15dp"
		        android:visibility="invisible"
		        android:src="@drawable/check_logo"
		        />
		    <ImageView 
		        android:id="@+id/img_02"
		        android:layout_width="0dp"
		        android:layout_weight="1"
		        android:scaleType="fitXY"
		        android:paddingLeft="15dp"
		        android:paddingRight="15dp"
		        android:visibility="invisible"
		        android:layout_height="wrap_content"
		        android:src="@drawable/check_logo"
		        />
		    <ImageView 
		        android:id="@+id/img_03"
		        android:layout_width="0dp"
		        android:layout_weight="1"
		        android:scaleType="fitXY"
		        android:paddingLeft="15dp"
		        android:paddingRight="15dp"
		        android:visibility="invisible"
		        android:layout_height="wrap_content"
		        android:src="@drawable/check_logo"
		        />
	   
	    </LinearLayout>
	</LinearLayout>
	<RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent">
	    <ImageView 
	        android:id="@+id/no_data_img"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerInParent="true"
	        android:src="@drawable/nodata"/>
	<android.support.v4.view.ViewPager
		android:id="@+id/account_query_result_panel" 
		android:layout_height="fill_parent"
		android:layout_width="fill_parent" />
   
   </RelativeLayout>
</LinearLayout>
