<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/chatMessageSenderTextCell"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/chat_cell_margin"
        android:layout_marginLeft="50dp" >

        <ImageView
            android:id="@+id/iconButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:background="@drawable/icon_bg" />

        <ImageView
            android:id="@+id/textBgImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/iconButton" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_toLeftOf="@+id/iconButton"
            android:orientation="horizontal" >

            <ProgressBar
                android:id="@+id/sending"
                style="?android:attr/progressBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="5dp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/contentText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="3dp"
                android:adjustViewBounds="true"
                android:background="@drawable/sender_pocket"
                android:maxHeight="100dp"
                android:maxWidth="230dp"
                android:minHeight="30dp"
                android:minWidth="30dp"
                android:scaleType="centerInside" >
            </ImageView>
        </LinearLayout>
    </RelativeLayout>

    <View
        android:id="@+id/chat_cell_margin"
        android:layout_width="fill_parent"
        android:layout_height="10dp"
        android:layout_alignParentBottom="true" />

</RelativeLayout>