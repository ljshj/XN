<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_page_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="180dp"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#D8F79E"
                android:gravity="center"
                android:text="橱窗操作"
                android:textSize="14sp" />
            
            
               <View style="@style/cut_line" />
                        
          	  <TextView android:id="@+id/tv_add_product"
                       android:drawableLeft="@drawable/img_user_center_shop"
                       android:text="添加产品"
                       style="@style/select_layout_small"
                       />
          	  
          	   <View style="@style/cut_line" />
                        
          	  <TextView android:id="@+id/tv_list_product"
                       android:drawableLeft="@drawable/img_user_center_shop"
                       android:text="我的产品"
                       style="@style/select_layout_small"
                       />
          	  
          	   <View style="@style/cut_line" />
                        
          	  <TextView android:id="@+id/tv_individuation"
                       android:drawableLeft="@drawable/img_user_center_shop"
                       android:text="个性化模块"
                       style="@style/select_layout_small"
                       />
            <View style="@style/cut_line" />
            
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" >
        </LinearLayout>
    </LinearLayout>

</LinearLayout>