<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_page_bg"
    android:orientation="vertical" >
    
    <RelativeLayout
        android:id="@+id/birthday_rl_title"
        style="@style/common_top_title_style" >

        <Button
            android:id="@+id/birthday_btn_back"
            style="@style/common_btn_back_style" />

        <TextView
            style="@style/common_tv_title_style"
            android:text="生日" />
        
        <Button
            android:id="@+id/birthday_btn_confirm"
            style="@style/common_btn_title_right_style"
            android:text="确定" />

    </RelativeLayout>
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/img_user_center_bg"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/birthday_tv_day"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请点击选择生日"
            android:lines="1" >

        </TextView>
    </LinearLayout>

</LinearLayout>
