<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dp"
     >

    <ImageView
        android:id="@+id/goup_item_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="5dp"
        android:layout_centerVertical="true"
        android:background="@drawable/icon_default" />

     <TextView
         android:id="@+id/goup_item_name"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="深圳交流群"
         android:textSize="20sp"
         android:layout_toRightOf="@id/goup_item_icon"
          android:layout_alignTop="@id/goup_item_icon"
          />
     
     <TextView
         android:id="@+id/tv_group_type"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:paddingLeft="1.5dp"
         android:paddingRight="1.5dp"
         android:paddingTop="0.5dp"
         android:paddingBottom="0.5dp"
         android:layout_marginLeft="5dp"
         android:layout_toRightOf="@id/goup_item_name"
         android:layout_alignTop="@id/goup_item_icon"
         android:textColor="@color/white"
         android:textSize="10sp"
         android:gravity="center"
         />

	  <TextView
	      android:id="@+id/goup_item_summary"
	      android:layout_width="wrap_content"
	      android:layout_height="wrap_content"
	      android:maxLines="2"
	      android:text="请自觉遵守群规"
	      android:layout_alignLeft="@id/goup_item_name"
	      android:layout_alignBottom="@id/goup_item_icon"
	      android:textSize="15sp"
	      android:textColor="@color/gray"
	      android:ellipsize="end"
	       />

</RelativeLayout>