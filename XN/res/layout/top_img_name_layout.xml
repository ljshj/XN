<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
     android:descendantFocusability="blocksDescendants"
    >
        
	     <ImageView
	         android:id="@+id/iv_img"
	         style="@style/item_img"
	         android:layout_margin="10dp"
	         />
        
           <TextView
              android:id="@+id/tv_nick"
              style="@style/item_nick"
              android:layout_alignTop="@id/iv_img"
              android:layout_toRightOf="@id/iv_img"
              android:text="张三丰"
              />
           
           <TextView
              android:id="@+id/tv_time"
              style="@style/item_time"
              android:layout_alignLeft="@id/tv_nick"
              android:layout_marginTop="5dp"
              android:layout_below="@id/tv_nick"
              android:text="2014-03-12"
              />
        
           <ImageView
              android:id="@+id/iv_rank"
              style="@style/item_time"
              android:layout_width="40dp"
              android:layout_height="60dp"
              android:layout_alignParentRight="true"
              android:layout_marginRight="10dp"
              android:layout_alignTop="@id/iv_img"
              android:textColor="@color/white"
              android:text="2"
              android:textSize="8sp"
              android:visibility="invisible"
              />
           
            <TextView
              android:id="@+id/tv_record_time"
              style="@style/item_time"
              android:text="2014-03-12"
              android:layout_toLeftOf="@id/iv_rank"
              android:textColor="@color/red"
              android:textSize="16sp"
              android:layout_centerVertical="true"
              android:layout_marginRight="10dp"
              android:visibility="gone"
              />
          
          <ImageView
              android:id="@+id/iv_delete"
              android:layout_width="45dp"
              android:layout_height="30dp"
              android:layout_alignTop="@id/iv_img"
              android:layout_alignParentRight="true"
              android:layout_marginRight="10dp"
              android:background="@drawable/icon_delete_new"
              android:visibility="gone"
              />
          
            
          
</RelativeLayout>
