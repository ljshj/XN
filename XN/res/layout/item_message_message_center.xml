<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="@drawable/item_press_grey_selector"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/message_usercenter_item_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:background="@drawable/ic_launcher" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/message_usercenter_item_icon" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginRight="3dp" >

            <TextView
                android:id="@+id/message_usercenter_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="追求永恒"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/message_usercenter_item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="4:32" />
        </RelativeLayout>

        <TextView
            android:id="@+id/message_usercenter_item_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="HI,你好"
            android:textSize="15dp" />
    </RelativeLayout>

</RelativeLayout>