<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout style="@style/common_top_title_style" >

        <Button
            android:id="@+id/return_btn"
            style="@style/common_btn_back_style" />

        <TextView
            style="@style/common_tv_title_style"
            android:text="详情" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent" >

        <ProgressBar
            android:id="@+id/common_progress"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerInParent="true" />

        <com.bgood.xn.view.xlistview.XListView
            android:id="@+id/common_xlv"
            style="@style/common_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/common_page_bg"
            android:divider="@android:color/transparent"
            android:dividerHeight="10dp"
            android:visibility="gone" >
        </com.bgood.xn.view.xlistview.XListView>
    </RelativeLayout>

</LinearLayout>