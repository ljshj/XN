<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/title_bar"/>

    <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_marginTop="10dp"
     android:background="@drawable/img_user_center_bg"
     android:orientation="vertical" >
       <TextView android:id="@+id/tv_feedback"
                 android:drawableLeft="@drawable/img_user_center_shop"
                 android:text="意见反馈"
                 style="@style/select_layout"/>

      <View style="@style/cut_line_horizontal" />
     
      <TextView android:id="@+id/tv_comment_score"
                 android:drawableLeft="@drawable/img_user_center_syetem_notification"
                 android:text="应用评分"
                 style="@style/select_layout"
                 />
      <View style="@style/cut_line_horizontal" />
    
      <TextView android:id="@+id/tv_update_version"
                 android:drawableLeft="@drawable/img_user_center_application_management"
                 android:text="版本升级"
                 style="@style/select_layout"/>

      <View style="@style/cut_line_horizontal" />

     <TextView android:id="@+id/tv_about_xuanneng"
                 android:drawableLeft="@drawable/img_user_center_xuanneng"
                 android:text="关于炫能"
                 style="@style/select_layout"
                 />

 </LinearLayout>
    
</LinearLayout>
