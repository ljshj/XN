<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:background="@drawable/img_user_center_bg"
    android:orientation="vertical" >
    
               <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/iv_author"
                    style="@style/item_img"/>

                <LinearLayout
                    android:id="@+id/layout_comment"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/tv_weiqiang_author"
                            android:text="追求永恒"
                           style="@style/item_nick"/>


                            <TextView
                                android:id="@+id/tv_weiqiang_distance"
                                android:drawableLeft="@drawable/img_weiqiang_distance_indicator"
                                style="@style/item_time"
                                android:text="500m"
                                />
                        
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_weiqiang_time"
                        style="@style/item_time"
                        android:text="昨天 4:45PM"
                        />
                </LinearLayout>
                   <ImageView 
                            android:id="@+id/iv_delete"
                            android:layout_width="50dp"
                            android:layout_gravity="top|right"
                            android:layout_height="wrap_content"
                            android:src="@drawable/img_common_delete"
                            android:visibility="gone"
                            />
            </LinearLayout>
            
             <TextView
             android:id="@+id/tv_content_fromuser"
             style="@style/item_nick"
             android:text="愤怒的小鸟"
             />

            <TextView
                android:id="@+id/tv_content"
               style="@style/item_content"
               android:text="内容" />
            
            <GridView 
                android:id="@+id/gv_show_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:verticalSpacing="3dp"
                android:horizontalSpacing="3dp"
                ></GridView>

                    <LinearLayout
                        android:id="@+id/ll_action"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="@drawable/img_weiqiang_more_bg"
            android:divider="@drawable/img_common_ll_divider"
            android:dividerPadding="5dp"
            android:orientation="horizontal"
            android:showDividers="middle" >
            
	            <LinearLayout 
	               style="@style/action_layout"
	                >
			    <TextView
                   android:id="@+id/tv_zan_count"
                   android:text="(1)"
                   android:drawableLeft="@drawable/img_common_zan"
                   style="@style/action_text"/>
			    </LinearLayout>

	             <LinearLayout 
	               style="@style/action_layout"
	                >
                <TextView
                    android:id="@+id/tv_comment_count"
                    android:text="(1)"
                    android:drawableStart="@drawable/img_weiqiang_reply_indicator"
                    style="@style/action_text"/>
                </LinearLayout>

	             <LinearLayout 
	               style="@style/action_layout"
	                >
                <TextView
                    android:id="@+id/tv_transpont_count"
                    android:text="(1)"
                    android:drawableLeft="@drawable/img_weiqiang_send_indicator"
                    style="@style/action_text"/>
				</LinearLayout>
				
				 <LinearLayout 
	                style="@style/action_layout"
	                >
                <TextView
                    android:id="@+id/tv_share_count"
                    android:text="(1)"
                    android:drawableLeft="@drawable/img_weiqiang_share_indicator"
                    style="@style/action_text"/>
                </LinearLayout>
                
        </LinearLayout>
            
</LinearLayout>
