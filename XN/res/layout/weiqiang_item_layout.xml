<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:background="@drawable/img_user_center_bg"
    android:orientation="vertical" >
    
                <include layout="@layout/top_img_name_layout"/>
            
               <TextView
		                android:id="@+id/tv_comments"
		               style="@style/item_content"
		               android:text="内容" />
               
                  <GridView 
		                android:id="@+id/gv_show_img"
		                android:layout_width="match_parent"
		                android:layout_height="wrap_content"
		                android:verticalSpacing="3dp"
		                android:horizontalSpacing="3dp"
		                android:numColumns="4"
		                />
            
               <LinearLayout 
                   android:id="@+id/ll_old_area"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="20dp"
                   android:layout_marginRight="20dp"
                   android:layout_marginBottom="10dp"
                   android:background="@color/gray_white"
                   >
		             <TextView
		             android:id="@+id/tv_old_user"
		             style="@style/item_nick"
		             android:text="愤怒的小鸟"
		             android:layout_margin="5dp"
		             />
		
		            <TextView
		                android:id="@+id/tv_content"
		               style="@style/item_content"
		               android:text="内容" />
		            
		            <GridView 
		                android:id="@+id/gv_old_show_img"
		                android:layout_width="match_parent"
		                android:layout_height="wrap_content"
		                android:verticalSpacing="3dp"
		                android:horizontalSpacing="3dp"
		                android:numColumns="4"
		                />

               </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_action"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/img_weiqiang_more_bg"
            android:divider="@drawable/img_common_ll_divider"
            android:dividerPadding="5dp"
            android:orientation="horizontal"
            android:showDividers="middle" >
            
	            <LinearLayout 
	               style="@style/action_layout"
	                >
			    <TextView
                   android:id="@+id/tv_zan_count"
                   android:text="(1)"
                   android:drawableLeft="@drawable/img_common_zan"
                   style="@style/action_text"/>
			    </LinearLayout>

	             <LinearLayout 
	               style="@style/action_layout"
	                >
                <TextView
                    android:id="@+id/tv_comment_count"
                    android:text="(1)"
                    android:drawableStart="@drawable/img_weiqiang_reply_indicator"
                    style="@style/action_text"/>
                </LinearLayout>

	             <LinearLayout 
	               style="@style/action_layout"
	                >
                <TextView
                    android:id="@+id/tv_transpont_count"
                    android:text="(1)"
                    android:drawableLeft="@drawable/img_weiqiang_send_indicator"
                    style="@style/action_text"/>
				</LinearLayout>
				
				 <LinearLayout 
	                style="@style/action_layout"
	                >
                <TextView
                    android:id="@+id/tv_share_count"
                    android:text="(1)"
                    android:drawableLeft="@drawable/img_weiqiang_share_indicator"
                    style="@style/action_text"/>
                </LinearLayout>
                
        </LinearLayout>
            
</LinearLayout>
