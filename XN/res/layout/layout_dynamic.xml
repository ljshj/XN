<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_page_bg"
    android:orientation="vertical" >
    
    <RelativeLayout
        android:id="@+id/dynamic_rl_title"
        style="@style/common_top_title_style" >

        <Button
            android:id="@+id/dynamic_btn_back"
            style="@style/common_btn_back_style" />

        <TextView
            style="@style/common_tv_title_style"
            android:text="我的动态" />

    </RelativeLayout>
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        
        <ListView 
            android:id="@+id/dynamic_lv_list"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:divider="@null">
            
        </ListView>
        
    </LinearLayout>
    

</LinearLayout>
