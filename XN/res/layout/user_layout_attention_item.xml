<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
   android:layout_width="match_parent"
   android:layout_height="wrap_content"
   android:background="@drawable/attention_bg"
   android:layout_gravity="center_vertical"
   android:paddingTop="5dp"
   android:paddingBottom="5dp"
   >

<ImageView
    android:id="@+id/iv_user"
    android:layout_width="55dp"
    android:layout_height="55dp"
    android:scaleType="fitXY"
	android:layout_marginLeft="15dp"
    android:src="@drawable/icon_default" />

  <TextView
      android:id="@+id/tv_username"
      android:text="笑笑"
      style="@style/text_common"
      android:layout_toRightOf="@id/iv_user"
      android:layout_alignTop="@id/iv_user"
      android:drawablePadding="5dp"
      android:layout_marginLeft="10dp"
      android:textSize="20sp"
      />
  
   <ImageView
      android:id="@+id/iv_sex"
      android:layout_width="18dp"
      android:layout_height="18dp"
      android:layout_gravity="center_vertical"
      android:layout_marginLeft="10dp"
      android:layout_alignTop="@id/tv_username"
      android:layout_toRightOf="@id/tv_username"
      />


   <TextView
       android:id="@+id/tv_identity"
       android:layout_alignTop="@id/iv_sex"
       android:layout_toRightOf="@id/iv_sex"
       style="@style/text_vip"/>

    <TextView
        android:id="@+id/tv_user_signname"
        style="@style/text_common"
        android:layout_alignLeft="@id/tv_username"
        android:layout_alignBottom="@id/iv_user"
        android:text="能能"
        android:textSize="14sp"
        android:textColor="@color/gray"
        />
    
    <Button
            android:id="@+id/btn_attention_type"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="15dp"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:text="已关注"/>

</RelativeLayout>